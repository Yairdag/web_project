<main>
    <form class="product-form" action="/edit-product" method="POST">
        <div class="form-control">
            <label for="title">Product Name</label>
            <input type="text" name="name" id="title" value="<%= product.name %>">
        </div>
        <div class="form-control">
            <label for="imageUrl">Image URL</label>
            <input type="text" name="imageUrl" id="imageUrl" value="<%= product.url %>">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" step="0.01" value="<%= product.price %>">
        </div>
            <input type="hidden" value="<%= product._id %>" name="productId">
        <button class="btn" type="submit">Update Product</button>
    </form>
</main>